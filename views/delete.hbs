{{!< main}}
<!-- Content Header (Page header) -->
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0">Deleted Todos</h1>
      </div>
    </div>
  </div>
</div>

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <!-- Deleted Todos Display Card -->
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><i class="fas fa-trash"></i> Deleted Todos</h3>
      </div>
        <div class="card-body">
          <table id="deletedTodosTable" class="table table-bordered table-striped table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>Todo</th>
                <th>Priority</th>
                <th>Completed</th>
                <th>Created</th>
                <th>Deleted At</th>
              </tr>
            </thead>
            <tbody id="deletedTodosTableBody">
              <!-- Deleted todos will be inserted here -->
            </tbody>
          </table>
        </div>
    </div>
  </div>
</section>

